@using MVC_SYSTEM.Class
@model MVC_SYSTEM.ModelsCorporate.tbl_HargaSawitSemasaModelViewEdit
@{
    @Scripts.Render("~/bundles/jqueryval")

    ChangeTimeZone timezone = new ChangeTimeZone();
}

<section class="content-wrapper main-content clear-fix">

    <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
        <h3 class="modal-title">@GlobalResCorp.lblPalmPriceAdd</h3>
    </div>
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        <div class="modal-body">
            <div class="form-horizontal">
                <div class="panel panel-primary">
                    <div class="panel-heading">@GlobalResCorp.lblPalmPriceInfo</div>
                    <div class="panel-body">
                        <div class="form-group">
                            <label class="control-label col-sm-3">@GlobalResCorp.lblPlantType:</label>
                            <div class="col-sm-8">
                                @Html.TextBoxFor(model => model.fld_JnsTnmn, null, new { @class = "form-control", @disabled = "true" })
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="control-label col-sm-3">@GlobalResCorp.lblMonth:</label>
                            <div class="col-sm-3">
                                @Html.TextBoxFor(model => model.fld_Bulan, null, new { @class = "form-control", @disabled = "true" })
                            </div>
                            <label class="control-label col-sm-2">@GlobalResCorp.lblYear:</label>
                            <div class="col-sm-3">
                                @Html.TextBoxFor(model => model.fld_Tahun, null, new { @class = "form-control", @disabled = "true" })
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="control-label col-sm-3">@GlobalResCorp.lblPalmPricePrice:</label>
                            <div class="col-sm-3">
                                @Html.TextBoxFor(model => model.fld_HargaSemasa, null, new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.fld_HargaSemasa, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        @Html.HiddenFor(model => model.fld_ID)
                    </div>
                </div>
            </div>
        </div>
        <div class="modal-footer">
            <input class="btn btn-success" type="submit" value=@GlobalResCorp.btnSave>
            <button class="btn btn-warning" data-dismiss="modal">@GlobalResCorp.btnBack</button>
        </div>
    }
</section>

<script>
    $("form").removeData("validator");
    $("form").removeData("unobtrusiveValidation");
    $.validator.unobtrusive.parse("form");
</script>