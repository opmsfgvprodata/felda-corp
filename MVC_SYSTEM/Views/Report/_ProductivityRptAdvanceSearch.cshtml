@using MVC_SYSTEM.Class

@{
    @Scripts.Render("~/bundles/jqueryval")
}

<section class="content-wrapper main-content clear-fix">
    <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
        <h3 class="modal-title">Carian Tambahan</h3>
    </div>
    <div class="modal-body">
        <div class="form-group">
            <label>Status</label>
            @Html.DropDownList("StatusList", null, htmlAttributes: new { @class = "form-control" })
        </div>
    </div>
    <div class="modal-footer">
        <button type="submit" id="LihatRekodProduktiviti" class="btn btn-primary">@GlobalResApproval.btnCari</button>
        <button type="button" class="btn btn-warning" data-dismiss="modal">@GlobalResApproval.btnTutup</button>
    </div>
</section>

<script>
    $(document).ready(function () {
        $('#LihatRekodProduktiviti').on("click", function (e) {
            $('#divLoading').show();
            var month = $("#MonthList").val();
            console.log(month);
            var year = $("#YearList").val();
            console.log(year);
            var selection = $("#SelectionList").val();
            console.log(selection);
            var unit = $("#UnitList").val();
            console.log(unit);
            var allPeringkat = $("#AllPeringkatList").val();
            console.log(allPeringkat);
            var status = $("#StatusList").val();
            console.log(status);

            $('#searchResultProductivityRptInfo').load('@Url.Action("_ProductivityRptSearch", "Report")', { MonthList: month, YearList: year, SelectionList: selection, UnitList: unit, AllPeringkatList: allPeringkat, StatusList: status});
            $('#myModal1').modal('hide');
            $('#divLoading').hide();
        });
    });
</script>
