@model IEnumerable<MVC_SYSTEM.Models.tbl_Version>
@using MVC_SYSTEM.Class;
@{
    GetTriager GetTriager = new GetTriager();
    GetLadang GetLadang = new GetLadang();
    Layout = null;
    int bil = 0;
    string ldgname = "";
    //int ldgcode = 0;
}
@if (ViewBag.DataCount >= 1)
{
    <logo />
    <table class="table table-hover table-bordered" style="font-size: 11px;" border="0">
        <thead>
            <tr>
                <th colspan="5" style="text-align:center;vertical-align:middle;">
                    @ViewBag.NamaSyarikat
                    <br />
                    (@GlobalResSysVersion.hdrCmpnyNo : @ViewBag.NoSyarikat)
                    <br />
                    @GlobalResSysVersion.hdrReportTitle
                    <br />
                    @GetTriager.GetMonthName(ViewBag.Month) - @ViewBag.Year
                </th>
            </tr>
            <tr>
                <th colspan="5" bgcolor="#073e5f" style="color:white;text-align:center;vertical-align:middle !important;border:1px solid black;" border="1">
                    @ViewBag.WilayahName
                </th>
            </tr>
            <tr>
                <th bgcolor="#073e5f" style="color:white;text-align:center;vertical-align:middle !important;border:1px solid black;" border="1">@GlobalResSysVersion.hdrNo</th>
                <th bgcolor="#073e5f" style="color:white;text-align:center;vertical-align:middle !important;border:1px solid black;" border="1">@GlobalResSysVersion.hdrKodLdg</th>
                <th bgcolor="#073e5f" style="color:white;text-align:center;vertical-align:middle !important;border:1px solid black;" border="1">@GlobalResSysVersion.hdrNamaLdg</th>
                <th bgcolor="#073e5f" style="color:white;text-align:center;vertical-align:middle !important;border:1px solid black;" border="1">@GlobalResSysVersion.hrdrVersion</th>
                <th bgcolor="#073e5f" style="color:white;text-align:center;vertical-align:middle !important;border:1px solid black;" border="1">@GlobalResSysVersion.hdrPengurus</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                bil = bil + 1;
                //ldgname = GetWilayah.GetWilayahName(wlyh);
                //ldgcode = GetLadang.GetCodeLadangFromID(item.fld_LadangID.Value);
                ldgname = GetLadang.GetLadangName(item.fld_LadangID.Value, item.fld_WilayahID.Value);
                <tr>
                    <td align="center" style="vertical-align:middle !important;border:1px solid black;" border="1">
                        @bil
                    </td>
                    <td align="center" style="vertical-align:middle !important;border:1px solid black;" border="1">
                        @item.fld_kdldg
                    </td>
                    <td align="center" style="vertical-align:middle !important;border:1px solid black;" border="1">
                        @ldgname
                    </td>
                    <td align="center" style="vertical-align:middle !important;border:1px solid black;" border="1">
                        @item.fld_progr_ver
                    </td>
                    <td align="center" style="vertical-align:middle !important;border:1px solid black;" border="1">
                        @item.fld_Nmpgrs
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <newpage />
}
