﻿@using MVC_SYSTEM.Class;
@{
    ViewBag.Title = "Incentive Report";
    Layout = "~/Views/Shared/_LayoutMain.cshtml";

    AjaxOptions options = new AjaxOptions
    {
        HttpMethod = "Get",
        UpdateTargetId = "searchResultWorkerIncentiveRptInfo",
        InsertionMode = InsertionMode.Replace,
        LoadingElementId = "divLoading"
    };
}

<script src="~/Asset/Scripts/jquery.unobtrusive-ajax.min.js"></script>

<div id="divLoading" style="display:none;">
    <div class="progressTest">
        <label>
            Sila tunggu
        </label>
    </div>
</div>

<section class="content-wrapper main-content clear-fix">
    <div class="well bottom" style="padding-bottom: 16px">
        @using (Ajax.BeginForm("_WorkerIncentiveRptSearch", "Report", null, options, new { @id = "WorkerIncentiveRptSearch" }))
        {
            @Html.AntiForgeryToken()
            <div class="row">
                <div class="col-sm-12">
                    <div class="col-sm-2">
                        @Html.RadioButton("RadioGroup", 0, new { @checked = "checked" })
                        @Html.Label(GlobalResCorp.lblIndividuSelection)<br />
                        @Html.RadioButton("RadioGroup", 1)
                        @Html.Label(GlobalResCorp.lblGroupSelection)<br />
                        @Html.RadioButton("RadioGroup", 2)
                        @Html.Label(GlobalResCorp.lblIncentiveType)
                    </div>
                    <div class="col-sm-2">
                        <label for="NamaSyarikat">@GlobalResApproval.lblSyarikatName</label>
                        @Html.DropDownList("SyarikatIDList", null, htmlAttributes: new { @class = "form-control" })
                    </div>
                    <div class="col-sm-2">
                        <label for="NamaSyarikat">@GlobalResApproval.lblWilayahName</label>
                        @Html.DropDownList("WilayahIDList", null, htmlAttributes: new { @class = "form-control" })
                    </div>
                    <div class="col-sm-2">
                        <label for="NamaSyarikat">@GlobalResApproval.lblLadangName</label>
                        @Html.DropDownList("LadangIDList", null, htmlAttributes: new { @class = "form-control" })
                    </div>
                    <div class="col-sm-2">
                        @Html.Label("Bulan")
                        @Html.DropDownList("MonthList", null, htmlAttributes: new { @class = "form-control" })
                    </div>     <div class="col-sm-2">
                        @Html.Label("Tahun")
                        @Html.DropDownList("YearList", null, htmlAttributes: new { @class = "form-control" })
                    </div>
                </div>
                <div class="col-sm-12">
                    <div class="col-sm-2">
                        <label id="SelectionLabel">@GlobalResCorp.lblWorker</label>
                        @Html.DropDownList("SelectionList", null, htmlAttributes: new { @class = "form-control" })
                    </div>
                    <div class="col-sm-2">
                        <label>@GlobalResCorp.lblStatus:</label>
                        @Html.DropDownList("statusList", new SelectList(ViewBag.StatusList, "Value", "Text"), new { @class = "selectionList form-control" })
                    </div>

                    <div class="col-sm-2" style="padding-top: 24px">
                        <input class="btn btn-primary btn-block" type="submit" name="Lihat" value="Lihat" />
                    </div>
                </div>

            </div>
        }
    </div>

    <div class="well" style="margin-top: 7px">
        <div class="modal-body">
            <div class="panel panel-primary">
                <div class="panel-heading">LAPORAN INSENTIF</div>
                <div class="panel-body">
                    <div id="searchResultWorkerIncentiveRptInfo">
                        @Html.Action("_WorkerIncentiveRptSearch")
                    </div>
                </div>
            </div>

        </div>
        <div class="modal-footer">
            <a href=@Url.Action("Index", "Report") class="btn btn-warning" role="button">Kembali</a>
        </div>

    </div>
</section>

<!-- modal placeholder-->
<div id='myModal1' class='modal fade in'>
    <div class="modal-dialog modal-sm">
        <div class="modal-content">
            <div id='myModalContent1'></div>
        </div>
    </div>
</div>

<div id='myModal' class='modal fade in'>
    <div class="modal-dialog modal-sm">
        <div class="modal-content">
            <div id='myModalContent'></div>
        </div>
    </div>
</div>

@section scripts{
    @Scripts.Render("~/Asset/Scripts/AjaxModal.js")
}

<script>
    $(document).ready(function () {
        getLadangList($("#WilayahIDList").val());
        getSelectionList($('input[name=RadioGroup]:checked').val(), $("#WilayahIDList").val(), $("#LadangIDList").val(), $("#SyarikatIDList").val());
        $('input[name="RadioGroup"][value="0"]').prop('checked', true);
    });
</script>
<script>
        $('input[name="RadioGroup"]').on("click", function (e) {
            var Radiogrp = $('input[name=RadioGroup]:checked').val();
            var radiogroup = {};
            var disableoption = "";
            $('#divLoading').show();
            radiogroup.url = "@Url.Action("GetList2", "Report")";
            radiogroup.type = "POST";
            radiogroup.data = JSON.stringify({ RadioGroup: Radiogrp, wlyh: $("#WilayahIDList").val(), ladang: $("#LadangIDList").val() ?? 0, cost: $("#SyarikatIDList").val() });
            radiogroup.datatype = "json";
            radiogroup.contentType = "application/json";
            radiogroup.success = function (result) {
                document.getElementById("SelectionLabel").innerText = result.SelectionLabel;
                $("#SelectionList").empty();
                    for (var i = 0; i < result.SelectionList.length; i++) {
                        $("#SelectionList").append("<option value=" + result.SelectionList[i].Value + " " + disableoption + ">" + result.SelectionList[i].Text + "</option>");
                    }
                $('#divLoading').hide();
            };
            radiogroup.error = function () { $.simplyToast('Sistem masalah', 'danger'); };
            $.ajax(radiogroup);
        });

     $("#SyarikatIDList").change(function () {
        var SyarikatIDList = {};
        var disableoption = "";
        SyarikatIDList.url = "@Url.Action("GetWilayah", "ApplicationSupport")";
        SyarikatIDList.type = "POST";
        SyarikatIDList.data = JSON.stringify({ SyarikatID: $("#SyarikatIDList").val() });
        SyarikatIDList.datatype = "json";
        SyarikatIDList.contentType = "application/json";
        SyarikatIDList.success = function (wilayahlist) {
            $("#WilayahIDList").empty();
            $("#LadangIDList").empty();
            $("#LadangIDList").append("<option value=0>@GlobalResActiveWorker.sltAll</option>");
            for (var i = 1; i < wilayahlist.length; i++) {
                if ($("#SyarikatIDList").val() == 0) {
                    disableoption = "disabled";
                }
                $("#WilayahIDList").append("<option value=" + wilayahlist[i].Value + " " + disableoption + ">" + wilayahlist[i].Text + "</option>");
            }
            getLadangList();
            getSelectionList($('input[name=RadioGroup]:checked').val(), $("#WilayahIDList").val(), $("#LadangIDList").val(), $("#SyarikatIDList").val());

        };

        SyarikatIDList.error = function () { $.simplyToast('Sistem masalah', 'danger'); };
        $.ajax(SyarikatIDList);
    });



  function getLadangList(wilayah) {
        var WilayahIDList = {};
        var disableoption = "";
        WilayahIDList.url = "@Url.Action("GetLadang", "ApplicationSupport")";
        WilayahIDList.type = "POST";
        WilayahIDList.data = JSON.stringify({ WilayahID: wilayah ?? $("#WilayahIDList").val(), SyarikatID: $("#SyarikatIDList").val() });
        WilayahIDList.datatype = "json";
        WilayahIDList.contentType = "application/json";
        WilayahIDList.success = function (ladanglist) {
            $("#LadangIDList").empty();
            $("#LadangIDList").append("<option value=0>@GlobalResActiveWorker.sltAll</option>");
            for (var i = 0; i < ladanglist.length; i++) {
                if ($("#WilayahIDList").val() == 0) {
                    disableoption = "disabled";
                }
                $("#LadangIDList").append("<option value=" + ladanglist[i].Value + " " + disableoption + ">" + ladanglist[i].Text + "</option>");
            }
        };
        WilayahIDList.error = function () { $.simplyToast('Sistem masalah', 'danger'); };
        $.ajax(WilayahIDList);
    };

      function getSelectionList(radio, wilayah, ldg, costCentre) {
         var radiogroup = {};
         var disableoption = "";
         radiogroup.url = "@Url.Action("GetList2", "Report")";
         radiogroup.type = "POST";
          radiogroup.data = JSON.stringify({ RadioGroup: radio, wlyh: wilayah, ladang: ldg, cost: costCentre });
         radiogroup.datatype = "json";
         radiogroup.contentType = "application/json";
         radiogroup.success = function (result) {
             document.getElementById("SelectionLabel").innerText = result.SelectionLabel;
             $("#SelectionList").empty();
                 for (var i = 0; i < result.SelectionList.length; i++) {
                     $("#SelectionList").append("<option value=" + result.SelectionList[i].Value + " " + disableoption + ">" + result.SelectionList[i].Text + "</option>");
                 }
             $('#divLoading').hide();
         };
         radiogroup.error = function () { $.simplyToast('Sistem masalah', 'danger'); };
         $.ajax(radiogroup);
    };

    $("#WilayahIDList").change(function () {
        var WilayahIDList = {};
        var disableoption = "";
        WilayahIDList.url = "@Url.Action("GetLadang", "ApplicationSupport")";
        WilayahIDList.type = "POST";
        WilayahIDList.data = JSON.stringify({ WilayahID: $("#WilayahIDList").val(), SyarikatID: $("#SyarikatIDList").val() });
        WilayahIDList.datatype = "json";
        WilayahIDList.contentType = "application/json";
        WilayahIDList.success = function (ladanglist) {
            $("#LadangIDList").empty();
            $("#LadangIDList").append("<option value=0>@GlobalResActiveWorker.sltAll</option>");
            for (var i = 0; i < ladanglist.length; i++) {
                if ($("#WilayahIDList").val() == 0) {
                    disableoption = "disabled";
                }
                $("#LadangIDList").append("<option value=" + ladanglist[i].Value + " " + disableoption + ">" + ladanglist[i].Text + "</option>");
            }
            getSelectionList($('input[name=RadioGroup]:checked').val(), $("#WilayahIDList").val(), $("#LadangIDList").val(), $("#SyarikatIDList").val());
        };
        WilayahIDList.error = function () { $.simplyToast('Sistem masalah', 'danger'); };
        $.ajax(WilayahIDList);
    });


    $("#LadangIDList").change(function () {
        getSelectionList($('input[name=RadioGroup]:checked').val(), $("#WilayahIDList").val(), $("#LadangIDList").val(), $("#SyarikatIDList").val());
    });

</script>