                            <div class="col-sm-1 text-center">
                                -
                            </div>
                            <div class="col-sm-2">
                                @Html.EditorFor(model => model.fld_CstCnter2, new { htmlAttributes = new { @class = "form-control" } })

                            </div>
                        </div>

                        <div class="col-sm-12" style="text-align:right; padding-top:7px;">
                            <input class="btn btn-success" type="submit" value="Sent" />
                            <a href="@Url.Action("ccList", "SAPMasterData")" onclick="return DisplayProgressMessage2(this);" class="btn btn-warning">@GlobalResCorp.btnBack</a>

                        </div>
                    </div>
                </div>
            </div>
        </div>

    }

</section>

