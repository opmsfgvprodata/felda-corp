@model MVC_SYSTEM.ModelsCorporate.tbl_CCSAPCreate
@using MVC_SYSTEM.Class;

@{
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div id="UpdateProgress1" style="display:none;">
    <div class="progressTest">
        <label>
            @GlobalResReport.WaitMsg
        </label>
    </div>
</div>
<section class="content-wrapper main-content clear-fix">
    

    @using (Html.BeginForm("_ccRequest", "SAPMasterData", new { id = "" }))
    {

        <div class="modal-body">
            <div class="form-horizontal">
                <div class="panel panel-primary">
                    <div class="panel-heading">Request New CostCenter</div>
                    <div class="panel-body">

                        <div class="form-group">
                            @Html.LabelFor(model => model.fld_CompanyCode, "SAP Company Code", htmlAttributes: new { @class = "control-label col-md-2" })
                            <div class="col-md-9">
                                @Html.DropDownList("fld_CompanyCode", null, htmlAttributes: new { @class = "form-control" })
                            </div>
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(model => model.fld_CstCnter, htmlAttributes: new { @class = "control-label col-md-2" })
                            <div class="col-sm-4">
                                @Html.EditorFor(model => model.fld_CstCnter, new { htmlAttributes = new { @class = "form-control required", required = "required" } })
                                @Html.ValidationMessageFor(model => model.fld_CstCnter, "", new { @class = "text-danger" })
                            </div>
                            <div class="col-sm-1 text-center">
                                -
                            </div>
                            <div class="col-sm-4">
                                @Html.EditorFor(model => model.fld_CstCnter2, new { htmlAttributes = new { @class = "form-control" } })

                            </div>
                        </div>

                        <div class="col-sm-1">

                            <input class="btn btn-success" type="submit" value="Sent" />

                        </div>
                    </div>
                </div>
            </div>
        </div>

    }

</section>

<script>
