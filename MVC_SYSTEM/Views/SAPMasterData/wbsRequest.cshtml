@model MVC_SYSTEM.ModelsCorporate.tbl_WBSSAPCreate


@{
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<section class="content-wrapper main-content clear-fix">
    @using (Html.BeginForm("_wbsRequest", "SAPMasterData", new { id = "" }))
    {
        @Html.AntiForgeryToken()
    <div class="modal-body">
        <div class="form-horizontal">
            <div class="panel panel-primary">
                <div class="panel-heading">Request New WBS</div>
                <div class="panel-body">
                    <div class="form-group">
                        <div class="col-md-12">
                            <div class="form-group">
                                @Html.LabelFor(model => model.fld_CompanyCode, "SAP Company Code", htmlAttributes: new { @class = "control-label col-md-2" })
                                <div class="col-md-3">
                                    @Html.DropDownList("fld_CompanyCode", null, htmlAttributes: new { @class = "form-control required", required = "required" })
                                    @Html.ValidationMessageFor(model => model.fld_CompanyCode, "", new { @class = "text-danger" })
                                </div>
                            </div>

                            <div class="form-group">
                                @Html.LabelFor(model => model.fld_wbsElement, "WBS Element", htmlAttributes: new { @class = "control-label col-md-2" })
                                <div class="col-md-3">
                                    @Html.EditorFor(model => model.fld_wbsElement, new { htmlAttributes = new { @class = "form-control required", required = "required" } })
                                    @Html.ValidationMessageFor(model => model.fld_wbsElement, "", new { @class = "text-danger" })
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-sm-12" style="text-align:right; padding-top:7px;">
                        <input class="btn btn-primary" type="submit" value="Sent" onclick="return DisplayProgressMessage(this);" />
                        @*<a href=@Url.Action("_wbsRequest", "SAPMasterData") class="btn btn-primary" role="button" onclick="return DisplayProgressMessage(this);">Sent</a>*@
                        <a href=@Url.Action("wbsList", "SAPMasterData") onclick="return DisplayProgressMessage2(this);" class="btn btn-warning">@GlobalResCorp.btnBack</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
        }
    </section>


<script>
    $("form").removeData("validator");
    $("form").removeData("unobtrusiveValidation");
    $.validator.unobtrusive.parse("form");
</script>
