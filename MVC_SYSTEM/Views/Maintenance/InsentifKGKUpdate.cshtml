@model MVC_SYSTEM.ModelsCorporate.tbl_InsentifKGK

@{
    ViewBag.Title = "InsentifKGKUpdate";
    //string kgk = Model.fld_KGKLower + " - " + Model.fld_KGKUpper;
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="modal-header">
        <h3 class="modal-title">@GlobalResCorp.titleUpdate</h3>
    </div>
    <div class="modal-body">
        <div class="form-horizontal">
            <span id="progress" class="text-center" style="display: none;">
                <img src="~/Asset/Images/wait.gif" alt="wait" />
            </span>
            @Html.HiddenFor(model => model.fld_ID)
            <div class="form-group">
                <label class="control-label col-md-2">Tahun Toreh</label>
                <div class="col-md-9">
                    @*@Html.EditorFor(model => model.fld_Jadual, new { htmlAttributes = new { @class = "form-control", disabled = "disabled" } })*@
                    @Html.DropDownList("fld_TahunToreh", null, htmlAttributes: new { @class = "form-control", @readonly = "readonly" })
                    @Html.ValidationMessageFor(model => model.fld_TahunToreh, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-md-2">% KGK Daripada</label>
                <div class="col-md-9">
                    @Html.EditorFor(model => model.fld_KGKLower, new { htmlAttributes = new { @class = "form-control required" } })
                    @Html.ValidationMessageFor(model => model.fld_KGKLower, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-md-2">% KGK Sehingga</label>
                <div class="col-md-9">
                    @Html.EditorFor(model => model.fld_KGKUpper, new { htmlAttributes = new { @class = "form-control required" } })
                    @Html.ValidationMessageFor(model => model.fld_KGKUpper, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-md-2">Kadar</label>
                <div class="col-md-9">
                    @Html.EditorFor(model => model.fld_KadarUpah, new { htmlAttributes = new { @class = "form-control required" } })
                    @Html.ValidationMessageFor(model => model.fld_KadarUpah, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>
    </div>
    <div class="modal-footer">
        <input class="btn btn-primary" type="submit" value=@GlobalResCorp.btnSave />
        <button class="btn btn-warning" data-dismiss="modal">@GlobalResCorp.btnBack</button>
    </div>
}

<script>
    $(document).ready(function () {
        $("#fld_TahunToreh").prop("disabled", true);

    })

</script>