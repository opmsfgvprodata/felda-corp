@model MVC_SYSTEM.ModelsCorporate.tbl_UpahMenuai

@{
    ViewBag.Title = "PayrateUpdate";
    //Layout = "~/Views/Shared/_LayoutMain.cshtml";
    string hasil = Model.fld_HasilLower + " - " + Model.fld_HasilUpper;
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="modal-header">
        @*<button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>*@
        <h3 class="modal-title">@GlobalResCorp.titleUpdate</h3>
    </div>
    <div class="modal-body">
        <div class="form-horizontal">
            <span id="progress" class="text-center" style="display: none;">
                <img src="~/Asset/Images/wait.gif" alt="wait" />
            </span>
            @Html.HiddenFor(model => model.fld_ID)
            <div class="form-group">
                <label class="control-label col-md-2">@GlobalResCorp.lblHarvestType</label>
                <div class="col-md-9">
                    @*@Html.EditorFor(model => model.fld_Jadual, new { htmlAttributes = new { @class = "form-control", disabled = "disabled" } })*@
                    @Html.DropDownList("fld_Jadual", null, htmlAttributes: new { @class = "form-control", @readonly = "readonly" })
                    @Html.ValidationMessageFor(model => model.fld_Jadual, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-md-2">@GlobalResCorp.hdrZonHasil (Tan/Hek)</label>
                <div class="col-md-9">
                    @Html.TextBox("fld_hasil", hasil, new { @class = "form-control", @readonly = "readonly" })
                    @*@Html.ValidationMessageFor(model => model.fld_HasilLower, "", new { @class = "text-danger" })*@
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-md-2">@GlobalResCorp.hdrRate (RM/Tan)</label>
                <div class="col-md-9">
                    @Html.EditorFor(model => model.fld_Kadar, new { htmlAttributes = new { @class = "form-control required" } })
                    @Html.ValidationMessageFor(model => model.fld_Kadar, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-md-2">@GlobalResCorp.hdrNote</label>
                <div class="col-md-9">
                   @Html.DropDownList("fld_Catitan", null, htmlAttributes: new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.fld_Catitan, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>
    </div>
    <div class="modal-footer">
        <input class="btn btn-primary" type="submit" value=@GlobalResCorp.btnSave />
        <button class="btn btn-warning" data-dismiss="modal">@GlobalResCorp.btnBack</button>
    </div>
}

<script>
    $(document).ready(function () {
        $("#fld_Jadual").prop("disabled", true);

    })

</script>