@model IEnumerable<MVC_SYSTEM.ModelsCorporate.tbl_HargaGetahSMR>


@using MVC_SYSTEM.Class;
@{
    ViewBag.Title = "HargaGetahSMRDetail";
    //Layout = "~/Views/Shared/_LayoutMain.cshtml";
    GetConfig GetConfig = new GetConfig();

    int bil = 0;
    string Tindakan = "";

}

@if (Model.Count() > 0)
{
    <div id="scrollArea2">
        <logo />
        <table class="table table-hover table-bordered" style="font-size: 11px;" border="0">
            <thead>
                <tr>
                    <th colspan="5" style="text-align:center;vertical-align:middle;">

                        <b style="font-size: 13px">KADAR UPAH MENOREH MENGIKUT HARGA SEMASA SMR 20</b>
                        <br />
                    </th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <th bgcolor="#ffcc80" style="color: black; text-align: center; vertical-align: middle !important; width: 30px; border: 1px solid black;" border="1">@GlobalResCorp.hdrNo</th>
                    <th bgcolor="#ffcc80" style="color: black; text-align: center; vertical-align: middle !important; width: 150px; border: 1px solid black;" border="1">Harga SMR 20</th>
                    <th bgcolor="#ffcc80" style="color: black; text-align: center; vertical-align: middle !important; width: 150px; border: 1px solid black;" border="1">Upah Kadaran Toreh 1-2</th>
                    <th bgcolor="#ffcc80" style="color: black; text-align: center; vertical-align: middle !important; width: 150px; border: 1px solid black;" border="1">Upah Kadaran Toreh 3-22</th>
                    <th bgcolor="#ffcc80" style="color: black; text-align: center; vertical-align: middle !important; width: 80px !important; border: 1px solid black;" border="1">Tindakan</th>

                </tr>

                    @foreach (var item in Model)
                    {
                        bil += 1;
                        <tr>

                            <td align="center" style="vertical-align: middle !important; width: 30px; border: 1px solid black;" border="1">
                                @bil
                            </td>
                            <td align="center" style="vertical-align: middle !important; border: 1px solid black;" border="1">
                                @item.fld_HargaGetah_Lower - @item.fld_HargaGetah_Upper
                            </td>
                            <td align="center" style="vertical-align: middle !important; border: 1px solid black;" border="1">
                                @item.fld_Upah_Tahun12
                            </td>
                            <td align="center" style="vertical-align: middle !important; border: 1px solid black;" border="1">
                                @item.fld_Upah_Tahun322
                            </td>
                            <td align="center" style="vertical-align: middle !important; width: 80px !important; border: 1px solid black;" border="1">
                                @{
                                    if (item.fld_Deleted == false)
                                    {
                                        Tindakan = "<a data-modal1='' href='" + @Url.Action("HrgGetahSMRUpdate", "Maintenance") + "/?id=" + item.fld_ID + "' class='btn btn-success' role='button' title='" + GlobalResCorp.btnUpdate + "' onclick='return DisplayProgressMessage(this);'><i class='fa fa-pencil-square-o  fa-lg'></i></a>&nbsp;" +
                                        "<a data-modal1='' href='" + @Url.Action("HrgGetahSMRDelete", "Maintenance") + "/?id=" + item.fld_ID + "' class='btn btn-danger' role='button' title='" + GlobalResCorp.btnDelete + "' onclick='return DisplayProgressMessage(this);'><i class='fa fa-trash fa-lg'></i></a>&nbsp;";
                                    }

                                    else
                                    {
                                        Tindakan = "<a data-modal1='' href='" + @Url.Action("HrgGetahSMRDelete", "Maintenance") + "/?id=" + item.fld_ID + "' class='btn btn-danger' role='button' title='" + GlobalResCorp.btnUnDelete + "' onclick='return DisplayProgressMessage(this);'><i class='fa fa-undo fa-lg'></i></a>&nbsp;";
                                    }
                                }
                                @Html.Raw(Tindakan)

                            </td>

                        </tr>
                    }
                

            </tbody>

        </table>
        <newpage />
    </div>


}
else
{
    <p style="color:red">@GlobalResCorp.msgErrorSearch</p>
}







