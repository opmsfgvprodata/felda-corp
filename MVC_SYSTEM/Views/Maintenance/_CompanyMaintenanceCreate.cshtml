@using MVC_SYSTEM.Class
@model MVC_SYSTEM.ModelsCorporate.tbl_Syarikat

@{
    @Scripts.Render("~/bundles/jqueryval")
}

<section class="content-wrapper main-content clear-fix">

    <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
        <h3 class="modal-title">@GlobalResCorp.lblCompanyAdd</h3>
    </div>
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        <div class="modal-body">
            <div class="form-horizontal">
                <div class="panel panel-primary">
                    <div class="panel-heading">@GlobalResCorp.lblCompanyInfo</div>
                    <div class="panel-body">
                        <div class="form-group">
                            <label class="control-label col-sm-3">@GlobalResCorp.lblCompanyGroupName:</label>
                            <div class="col-sm-8">
                                @Html.DropDownListFor(model => model.fld_NegaraID, new SelectList(ViewBag.CompanyGroupCountryList, "Value", "Text"), new { @class = "selectionList edit-mode form-control" })
                                @Html.ValidationMessageFor(model => model.fld_NegaraID, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="control-label col-sm-3">@GlobalResCorp.lblCompanyName:</label>
                            <div class="col-sm-8">
                                @Html.TextBoxFor(model => model.fld_NamaSyarikat, htmlAttributes: new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.fld_NamaSyarikat, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="control-label col-sm-3">@GlobalResCorp.lblCompanyShortName:</label>
                            <div class="col-sm-2">
                                @Html.TextBoxFor(model => model.fld_NamaPndkSyarikat, htmlAttributes: new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.fld_NamaPndkSyarikat, "", new { @class = "text-danger" })
                            </div>
                            <label class="control-label col-sm-3">@GlobalResCorp.lblCompanyNo:</label>
                            <div class="col-sm-3">
                                @Html.TextBoxFor(model => model.fld_NoSyarikat, htmlAttributes: new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.fld_NoSyarikat, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="control-label col-sm-3">@GlobalResCorp.lblCompanyEmail:</label>
                            <div class="col-sm-8">
                                @Html.TextBoxFor(model => model.fld_SyarikatEmail, htmlAttributes: new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.fld_SyarikatEmail, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="control-label col-sm-3">@GlobalResCorp.lblCompanyFirstUserName:</label>
                            <div class="col-sm-2">
                                @Html.TextBoxFor(model => model.fld_FrstNmeUsrNme, htmlAttributes: new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.fld_FrstNmeUsrNme, "", new { @class = "text-danger" })
                            </div>
                            <label class="control-label col-sm-3">@GlobalResCorp.lblCompanyRequestCode:</label>
                            <div class="col-sm-3">
                                @Html.TextBoxFor(model => model.fld_RequestCode, htmlAttributes: new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.fld_RequestCode, "", new { @class = "text-danger" })
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="modal-footer">
            <input class="btn btn-success" type="submit" value=@GlobalResCorp.btnSave>
            <button class="btn btn-warning" data-dismiss="modal">@GlobalResCorp.btnBack</button>
        </div>
    }
</section>

<script>
    $("form").removeData("validator");
    $("form").removeData("unobtrusiveValidation");
    $.validator.unobtrusive.parse("form");
</script>