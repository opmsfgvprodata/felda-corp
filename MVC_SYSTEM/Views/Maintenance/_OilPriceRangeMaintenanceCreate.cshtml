@using MVC_SYSTEM.Class
@model MVC_SYSTEM.ModelsCorporate.tbl_HargaSawitRange

@{
    @Scripts.Render("~/bundles/jqueryval")
}

<section class="content-wrapper main-content clear-fix">

    <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
        <h3 class="modal-title">@GlobalResCorp.lblOilPriceRangeAdd</h3>
    </div>
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        <div class="modal-body">
            <div class="form-horizontal">
                <div class="panel panel-primary">
                    <div class="panel-heading">@GlobalResCorp.lblOilPriceRangeInfo</div>
                    <div class="panel-body">
                        <div class="form-group">
                            <label class="control-label col-sm-3">@GlobalResCorp.lblOilPriceRangeCode:</label>
                            <div class="col-sm-2">
                                @Html.TextBoxFor(model => model.fld_KodHarga, htmlAttributes: new { @class = "form-control col-sm-2" })
                            </div>
                            <div class="col-sm-offset-3 col-sm-8">
                                @Html.ValidationMessageFor(model => model.fld_KodHarga, "", new { @class = "text-danger" })
                                @Html.ValidationMessage("CustomError")                            </div>
                        </div>
                        <div class="form-group">
                            <label class="control-label col-sm-3">@GlobalResCorp.lblOilPriceRangeLower:</label>
                            <div class="col-sm-8">
                                @Html.TextBoxFor(model => model.fld_RangeHargaLower, htmlAttributes: new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.fld_RangeHargaLower, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="control-label col-sm-3">@GlobalResCorp.lblOilPriceRangeUpper:</label>
                            <div class="col-sm-4">
                                @Html.TextBoxFor(model => model.fld_RangeHargaUpper, htmlAttributes: new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.fld_RangeHargaUpper, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="control-label col-sm-3">@GlobalResCorp.lblOilPriceRangeIncentive:</label>
                            <div class="col-sm-4">
                                @Html.TextBoxFor(model => model.fld_Insentif, htmlAttributes: new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.fld_Insentif, "", new { @class = "text-danger" })
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="modal-footer">
            <input class="btn btn-success" type="submit" value=@GlobalResCorp.btnSave>
            <button class="btn btn-warning" data-dismiss="modal">@GlobalResCorp.btnBack</button>
        </div>
    }
</section>

<script>
    $("form").removeData("validator");
    $("form").removeData("unobtrusiveValidation");
    $.validator.unobtrusive.parse("form");
</script>
