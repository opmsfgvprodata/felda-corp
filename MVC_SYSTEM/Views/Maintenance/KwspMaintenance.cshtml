
@{
    ViewBag.Title = "KwspMaintenance";
    Layout = "~/Views/Shared/_LayoutMain.cshtml";
}

<section class="content-wrapper main-content clear-fix">

    @using (Html.BeginForm("KwspMaintenance", null, FormMethod.Get))
    {
        <div class="well bottom" style="padding-bottom: 16px">
            <div class="row">
                <div class="col-sm-2">
                    @*manual,mekanikal*@
                    @Html.Label(GlobalResCorp.lblKwspType)
                    @Html.DropDownList("KwspList", null, htmlAttributes: new { @class = "form-control" })
                </div>
                <div class="col-sm-2" style="padding-top:25px;">
                    <input class="btn btn-primary btn-block" type="submit" name="Lihat" id="btnSubmit" value="@GlobalResCorp.btnView" />
                    @*<input class="btn btn-primary btn-block" type="submit" name="Lihat" id="btnSubmit" value="@GlobalResNoSkb.btnViewName" />*@
                </div>
            </div>
        </div>

        <div class="well" style="margin-top: 7px">
            <div class="panel panel-primary">
                <div id="divheader" class="panel-heading">@GlobalResCorp.lblKwspContribution - @ViewBag.JnsKwsp </div>
                <div class="panel-body" id="content">
                    @if (ViewBag.Datacount < 1)
                    {
                        <p>@GlobalResCorp.msgChooseKwsp</p>
                    }
                    else
                    {
                        <div style="margin-top:17px;">
                            @{
                                var grid = new WebGrid(
                                    canPage: true,
                                    rowsPerPage: Model.PageSize,
                                    canSort: true,
                                    ajaxUpdateContainerId: "grid");

                                grid.Bind(Model.Content, rowCount: Model.TotalRecords, autoSortAndPage: false);

                                @grid.GetHtml(htmlAttributes: new { id = "grid" },   // id for ajaxUpdateContainerId parameter
                         fillEmptyRows: false,
                         tableStyle: "table table-bordered table-hover",
                         mode: WebGridPagerModes.All,
                         columns: grid.Columns(
                             grid.Column(GlobalResCorp.hdrNo, style: "col-lg-1", format: item => item.WebGrid.Rows.IndexOf(item) + 1 + Math.Round(Convert.ToDouble(grid.TotalRowCount / grid.PageCount) / grid.RowsPerPage) * grid.RowsPerPage * grid.PageIndex),
                            grid.Column("fld_KdrLower", GlobalResCorp.lblSalaryRange + " (RM)", style: "col-lg-2",
                           format: (item) =>
                           {
                               if (item.fld_KdrUpper != null)
                                   return item.fld_KdrLower + " - " + item.fld_KdrUpper;
                               else
                                   return item.fld_KdrLower;
                           }),
                           grid.Column("fld_Mjkn", GlobalResCorp.lblEmloyerShare + " (RM)", style: "col-lg-2"),
                             grid.Column("fld_Pkj", GlobalResCorp.lblEmployeeShare + " (RM)", style: "col-lg-2"),
                            grid.Column(GlobalResCorp.hdrAction, canSort: false, style: "col-lg-2",
                            format: @<text>
                                @Html.Raw("<a data-modal='' href='" + @Url.Action("KwspMaintenanceUpdate", "Maintenance") + "/?id=" + item.fld_ID + "' title='Update'> <span class='glyphicon glyphicon-edit'> </span> </a>")
                                @Html.Raw("<a data-modal='' href='" + @Url.Action("KwspMaintenanceDelete", "Maintenance") + "/?id=" + item.fld_ID + "' title='Delete'> <span class='glyphicon glyphicon-trash'> </span> </a>")
                            </text>)

                        ));
                            }


                        </div>

                                }

                </div>
            </div>
            <div class="modal-footer">
                <a style="text-align:right" data-modal="" href="@Url.Action("Upload", "Maintenance")" class="btn btn-warning">@GlobalResCorp.btnUploadFile</a>
                <a style="text-align:right" data-modal="" href="@Url.Action("KwspMaintenanceInsert", "Maintenance")" class="btn btn-warning">@GlobalResCorp.btnAdd</a>
                <a style="text-align:right" href="@Request.UrlReferrer" class="btn btn-primary" title="Back to list">@GlobalResCorp.btnBack</a>
            </div>
        </div>
                                }
</section>

<!-- modal placeholder-->
<div id='myModal' class='modal fade in'>
    <div class="modal-dialog">
        <div class="modal-content">
            <div id='myModalContent'></div>
        </div>
    </div>
</div>
@section scripts{
    @Scripts.Render("~/Asset/Scripts/appjs.js")
}
