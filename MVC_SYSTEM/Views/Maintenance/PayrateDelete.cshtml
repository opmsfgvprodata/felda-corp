@model MVC_SYSTEM.ModelsCorporate.tbl_UpahMenuai

@{
    ViewBag.Title = "PayrateDelete";
    //Layout = "~/Views/Shared/_LayoutMain.cshtml";
    string hasil = Model.fld_HasilLower + " - " + Model.fld_HasilUpper;
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="modal-header">
        @*<button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>*@
        <h3 class="modal-title">@GlobalResCorp.titleDelete</h3>
    </div>

    <div class="modal-body">

        <div class="form-horizontal">
            <span id="progress" class="text-center" style="display: none;">
                <img src="~/Asset/Images/wait.gif" alt="wait" />
            </span>
            <div class="form-group">
                @Html.HiddenFor(model => model.fld_ID)
                 @Html.HiddenFor(model => model.fld_NegaraID)
                  @Html.HiddenFor(model => model.fld_SyarikatID)
                <label class="control-label col-md-2">@GlobalResCorp.hdrZonHasil (Tan/Hek)</label>
                <div class="col-md-9">
                    @Html.TextBox("fld_hasil", hasil, new { @class = "form-control", @readonly = "readonly" })
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-md-2">@GlobalResCorp.hdrRate (RM/Tan)</label>
                <div class="col-md-9">
                    @Html.EditorFor(model => model.fld_Kadar, new { htmlAttributes = new { @class = "form-control", disabled = "disabled" } })
                </div>
            </div>

            <div class="form-group">
                <div class="col-sm-9 col-sm-offset-3">
                    <h3>
                        <span class="label label-danger">
                            @GlobalResCorp.msgDelete
                        </span>
                    </h3>
                </div>
            </div>
        </div>
    </div>


    <div class="modal-footer">
        <button class="btn btn-primary" data-dismiss="modal">@GlobalResCorp.btnNo</button>
        <input class="btn btn-danger" type="submit" value=@GlobalResCorp.btnYes />
    </div>
}
