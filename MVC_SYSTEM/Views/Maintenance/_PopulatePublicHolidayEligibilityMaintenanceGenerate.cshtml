@using MVC_SYSTEM.Class
@model MVC_SYSTEM.ModelsCorporate.vw_CutiUmumKelayakanDetailsGenerate
@{
    @Scripts.Render("~/bundles/jqueryval")

    GetConfig getConfig = new GetConfig();
}

<section class="content-wrapper main-content clear-fix">
    <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
        <h3 class="modal-title">@GlobalResCorp.titlePopulatePublicHolidayMaintenanceGenerate</h3>
    </div>
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        <div class="modal-body">
            <div class="form-horizontal">
                <div class="panel panel-primary">
                    <div class="panel-heading">@GlobalResCorp.lblPopulatePublicHolidayMaintenanceInfo</div>
                    <div class="panel-body">
                        <div class="form-group">
                            <label class="control-label col-sm-3">@GlobalResCorp.lblYear:</label>
                            <div class="col-sm-8">
                                @Html.DropDownListFor(model => model.fld_Tahun, new SelectList(ViewBag.YearList, "Value", "Text", Model.fld_Tahun), new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.fld_Tahun, null, new { @class = "text-danger" })
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="modal-footer" style="margin-top: -20px;">
            <input class="btn btn-success" type="submit" value=@GlobalResCorp.btnGenerate />
            <button class="btn btn-warning" data-dismiss="modal">@GlobalResCorp.btnBack</button>
        </div>
    }
</section>

<script>
    $("form").removeData("validator");
    $("form").removeData("unobtrusiveValidation");
    $.validator.unobtrusive.parse("form");
</script>


