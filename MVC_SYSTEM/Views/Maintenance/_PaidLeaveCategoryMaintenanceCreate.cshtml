@model MVC_SYSTEM.ModelsCorporate.tbl_CutiKategoriViewModelCreate
@{
    Layout = null;
}

<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
    <h3 class="modal-title">@GlobalResCorp.lblPaidLeaveCategoryAdd</h3>
</div>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="modal-body">
        <div class="form-horizontal">
            <div class="panel panel-primary">
                <div class="panel-heading">@GlobalResCorp.lblPaidLeaveCategoryInfo</div>
                <div class="panel-body">
                    <div class="form-group">
                        <div class="form-group">
                            <label class="control-label col-sm-3">@GlobalResCorp.hdrLeaveCode:</label>
                            <div class="col-sm-2">
                                @Html.TextBoxFor(model => model.fld_KodCuti, htmlAttributes: new { @class = "form-control", @readonly = "readonly" })
                                @Html.ValidationMessageFor(model => model.fld_KodCuti, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="control-label col-sm-3">@GlobalResCorp.hdrDesc:</label>
                            <div class="col-sm-7">
                                @Html.TextBoxFor(model => model.fld_KeteranganCuti, htmlAttributes: new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.fld_KeteranganCuti, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="control-label col-sm-3">@GlobalResCorp.hdrLeavePayment:</label>
                            <div class="col-sm-3">
                                @Html.DropDownListFor(model => model.fld_WaktuBayaranCuti, new SelectList(ViewBag.WaktuBayaranCutiList, "Value", "Text"), new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.fld_WaktuBayaranCuti, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="control-label col-sm-3">@GlobalResCorp.lblGLCode:</label>
                            <div class="col-sm-4">
                                @Html.DropDownListFor(model => model.fld_KodGL, new SelectList(ViewBag.GLList, "Value", "Text"), new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.fld_KodGL, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="control-label col-sm-3">@GlobalResCorp.hdrActvtCode:</label>
                            <div class="col-sm-2">
                                @Html.TextBoxFor(model => model.fld_KodAktvt, htmlAttributes: new { @class = "form-control", @readonly = "true" })
                                @Html.ValidationMessageFor(model => model.fld_KodAktvt, "", new { @class = "text-danger" })
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>


    <div class="modal-footer">
        <input class="btn btn-success" type="submit" value=@GlobalResCorp.btnAdd />
        <button class="btn btn-danger" data-dismiss="modal">@GlobalResCorp.btnBack</button>
    </div>
}

<script>
    $("form").removeData("validator");
    $("form").removeData("unobtrusiveValidation");
    $.validator.unobtrusive.parse("form");
</script>



