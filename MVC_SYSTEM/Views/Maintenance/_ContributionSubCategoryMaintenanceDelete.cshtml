@using MVC_SYSTEM.Class
@model MVC_SYSTEM.ModelsCorporate.tbl_SubCarumanTambahan

@{
    @Scripts.Render("~/bundles/jqueryval")
}

<section class="content-wrapper main-content clear-fix">

    <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
        @if (Model.fld_Deleted == false)
        {
            <h3 class="modal-title">@GlobalResCorp.lblContributionSubCategoryDelete</h3>
        }
        else
        {
            <h3 class="modal-title">@GlobalResCorp.lblContributionSubCategoryUnDelete</h3>
        }
    </div>
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        <div class="modal-body">
            <div class="form-horizontal">
                <div class="panel panel-primary">
                    <div class="panel-heading">@GlobalResCorp.lblContributionSubCategoryInfo</div>
                    <div class="panel-body">
                        <div class="form-group">
                            <label class="control-label col-sm-3">@GlobalResCorp.lblContributionSubCategoryCode:</label>
                            <div class="col-sm-2">
                                @Html.TextBoxFor(model => model.fld_KodSubCaruman, htmlAttributes: new { @class = "form-control col-sm-2", @disabled = "true" })
                            </div>
                            <div class="col-sm-offset-3 col-sm-8">
                                @Html.ValidationMessageFor(model => model.fld_KodSubCaruman, "", new { @class = "text-danger", @disabled = "true" })
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="control-label col-sm-3">@GlobalResCorp.lblContributionSubCategoryDesc:</label>
                            <div class="col-sm-8">
                                @Html.TextBoxFor(model => model.fld_KeteranganSubCaruman, htmlAttributes: new { @class = "form-control", @disabled = "true" })
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="control-label col-sm-3">@GlobalResCorp.lblContributionSubCategoryMinAge:</label>
                            <div class="col-sm-2">
                                @Html.TextBoxFor(model => model.fld_UmurLower, htmlAttributes: new { @class = "form-control", @disabled = "true" })
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="control-label col-sm-3">@GlobalResCorp.lblContributionSubCategoryMaxAge:</label>
                            <div class="col-sm-2">
                                @Html.TextBoxFor(model => model.fld_UmurUpper, htmlAttributes: new { @class = "form-control", @disabled = "true" })
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="control-label col-sm-3">@GlobalResCorp.lblContributionSubCategoryEmpyeeCont:</label>
                            <div class="col-sm-2">
                                @Html.TextBoxFor(model => model.fld_KadarPekerja, htmlAttributes: new { @class = "form-control", @disabled = "true" })
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="control-label col-sm-3">@GlobalResCorp.lblContributionSubCategoryEmpyerCont:</label>
                            <div class="col-sm-2">
                                @Html.TextBoxFor(model => model.fld_KadarMajikan, htmlAttributes: new { @class = "form-control", @disabled = "true" })
                            </div>
                            @Html.HiddenFor(model => model.fld_KodCaruman)
                            @Html.HiddenFor(model => model.fld_JenisSubCarumanID)
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-sm-12 text-center">
                        <h3>
                            <span class="label label-danger">
                                @GlobalResCorp.msgDelete
                            </span>
                        </h3>
                    </div>
                </div>
            </div>
        </div>
        <div class="modal-footer">
            <input class="btn btn-success" type="submit" value=@GlobalResCorp.btnYes>
            <button class="btn btn-danger" data-dismiss="modal">@GlobalResCorp.btnNo</button>
        </div>       
    }
</section>