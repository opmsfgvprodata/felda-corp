@using MVC_SYSTEM.Class
@model MVC_SYSTEM.ModelsEstate.tbl_PkjCarumanTambahan

@{
    @Scripts.Render("~/bundles/jqueryval")

    GetConfig getConfig = new GetConfig();
}

<section class="content-wrapper main-content clear-fix">

    <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
        <h3 class="modal-title">@GlobalResCorp.lblEstateWorkerAdditionalContributionDelete</h3>
    </div>
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
    <div class="modal-body">
        <div class="form-horizontal">
            <div class="panel panel-primary">
                <div class="panel-heading">@GlobalResCorp.lblEstateWorkerAdditionalContributionInfo</div>
                <div class="panel-body">
                    <div class="form-group">
                        <label class="control-label col-sm-3">@GlobalResCorp.lblRegion:</label>
                        <div class="col-sm-8">
                            @Html.TextBoxFor(model => model.fld_WilayahID, null, new { @class = "form-control", @Value = getConfig.GetWilayahNameFromID(Model.fld_WilayahID), @disabled = "true" })
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="control-label col-sm-3">@GlobalResCorp.lblEstate:</label>
                        <div class="col-sm-8">
                            @Html.TextBoxFor(model => model.fld_LadangID, null, new { @class = "form-control", @Value = getConfig.GetLadangNameFromID(Model.fld_LadangID), @disabled = "true" })
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="control-label col-sm-3">@GlobalResCorp.lblWorker:</label>
                        <div class="col-sm-8">
                            @Html.TextBoxFor(model => model.fld_LadangID, null, new { @class = "form-control", @Value = getConfig.GetPkjNameFromNoPkj(Model.fld_Nopkj, Model.fld_NegaraID, Model.fld_SyarikatID, Model.fld_WilayahID, Model.fld_LadangID), @disabled = "true" })
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="control-label col-sm-3">@GlobalResCorp.lblContributionCategoryDesc:</label>
                        <div class="col-sm-8">
                            @Html.TextBoxFor(model => model.fld_LadangID, null, new { @class = "form-control", @Value = getConfig.GetAdditionalMainContributionDesc(Model.fld_KodCaruman, Model.fld_NegaraID, Model.fld_SyarikatID), @disabled = "true" })
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="control-label col-sm-3">@GlobalResCorp.lblContributionSubCategoryCode:</label>
                        <div class="col-sm-8">
                            @Html.TextBoxFor(model => model.fld_LadangID, null, new { @class = "form-control", @Value = getConfig.GetAdditionalContributionDesc(Model.fld_KodSubCaruman, Model.fld_NegaraID, Model.fld_SyarikatID), @disabled = "true" })
                        </div>
                    </div>
                    @Html.HiddenFor(model => model.fld_WilayahID)
                    @Html.HiddenFor(model => model.fld_LadangID)
                    @Html.HiddenFor(model => model.fld_ID)
                </div>
            </div>
        </div>
        <div class="form-group">
            <div class="col-sm-12 text-center">
                <h3>
                    <span class="label label-danger">
                        @GlobalResCorp.msgDelete
                    </span>
                </h3>
            </div>
        </div>
    </div>
        <div class="modal-footer">
            <input class="btn btn-success" type="submit" value=@GlobalResCorp.btnYes>
            <button class="btn btn-danger" data-dismiss="modal">@GlobalResCorp.btnNo</button>
        </div>
    }
</section>

<script>
    $("form").removeData("validator");
    $("form").removeData("unobtrusiveValidation");
    $.validator.unobtrusive.parse("form");
</script>