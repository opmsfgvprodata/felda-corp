@{ 
    int bill = 0;
}

@if (ViewBag.countlist != 0)
{
    <table class="table table-hover table-bordered" style="font-size: 11px;" border="0" width="100%">
        <thead>
            <tr>
                <th>Bil</th>
                <th>Lot</th>
                <th>Status Tanaman</th>
                <th>Kod GL</th>
            </tr>
        </thead>
        <tbody>
            
            @foreach (var item in ViewBag.listGL)
            {

                bill = bill + 1;
                var lotDesc = "";
                var statusDesc = "";
                var lot = item.fldOptConfFlag2;
                var status = item.fldOptConfDesc;
                var code = item.fldOptConfValue;

                if (lot == "P")
                {
                    lotDesc = "Peneroka";
                }
                else
                {
                    lotDesc = "FELDA";
                }

                if (status == "Matured")
                {
                    statusDesc = "Matang Utama";
                }
                else if (status == "Non Matured")
                {
                    statusDesc = "Matang Muda";
                }
                else
                {
                    statusDesc = "Tanam Semula";
                }

                <tr>
                    <td>@bill</td>
                    <td>@lotDesc</td>
                    <td>@statusDesc</td>
                    <td>@code</td>
                </tr>

            }
        </tbody>
    </table>
}
else
{

}
