@model MVC_SYSTEM.ModelsCorporate.tbl_Socso
@using MVC_SYSTEM.Class;

@{
    ViewBag.Title = "SocsoMaintenanceUpdate";
    //Layout = "~/Views/Shared/_LayoutMain.cshtml";
    GetConfig GetConfig = new GetConfig();
    string jnscaruman = GetConfig.GetKwspSocso(Model.fld_KodCaruman, Model.fld_SyarikatID.Value, Model.fld_NegaraID.Value);
    string carumandesc = Model.fld_KodCaruman + " - " + jnscaruman;
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="modal-header">
        @*<button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>*@
        <h3 class="modal-title">@GlobalResCorp.titleUpdate</h3>
    </div>
    <div class="modal-body">
        <div class="form-horizontal">
            <span id="progress" class="text-center" style="display: none;">
                <img src="~/Asset/Images/wait.gif" alt="wait" />
            </span>
            @Html.HiddenFor(model => model.fld_ID)
            <div class="form-group">
                <label class="control-label col-md-2">@GlobalResCorp.lblSocsoType</label>
                <div class="col-md-9">
                    @Html.TextBox("fld_KodCaruman", carumandesc, new { @class = "form-control", @readonly = "readonly" })
                    @*@Html.EditorFor(model => model.fld_KodCaruman, new { htmlAttributes = new { @class = "form-control", disabled = "disabled" } })*@
                    @*@Html.DropDownList("fld_KodAktvt", null, htmlAttributes: new { @class = "form-control", @readonly = "readonly" })*@
                    @*@Html.ValidationMessageFor(model => model.fld_KodCaruman, "", new { @class = "text-danger" })*@
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-md-2">@GlobalResCorp.hdrMinVal</label>
                <div class="col-md-9">
                    @Html.EditorFor(model => model.fld_KdrLower, new { htmlAttributes = new { @class = "form-control required" } })
                    @Html.ValidationMessageFor(model => model.fld_KdrLower, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-md-2">@GlobalResCorp.hdrMaxVal</label>
                <div class="col-md-9">
                    @Html.EditorFor(model => model.fld_KdrUpper, new { htmlAttributes = new { @class = "form-control required" } })
                    @Html.ValidationMessageFor(model => model.fld_KdrUpper, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-md-2">@GlobalResCorp.lblEmloyerShare (RM)</label>
                <div class="col-md-9">
                    @Html.EditorFor(model => model.fld_SocsoMjkn, new { htmlAttributes = new { @class = "form-control required" } })
                    @Html.ValidationMessageFor(model => model.fld_SocsoMjkn, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-md-2">@GlobalResCorp.lblEmployeeShare (RM)</label>
                <div class="col-md-9">
                    @Html.EditorFor(model => model.fld_SocsoPkj, new { htmlAttributes = new { @class = "form-control required" } })
                    @Html.ValidationMessageFor(model => model.fld_SocsoPkj, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>
    </div>
    <div class="modal-footer">
        <input class="btn btn-primary" type="submit" value=@GlobalResCorp.btnSave />
        <button class="btn btn-warning" data-dismiss="modal">@GlobalResCorp.btnBack</button>
    </div>
}
