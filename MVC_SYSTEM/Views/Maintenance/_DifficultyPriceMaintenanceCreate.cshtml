@using MVC_SYSTEM.Class
@model MVC_SYSTEM.ModelsCorporate.tblOptionConfigsWebHarvestingDifficultyPriceViewModelCreate

@{
    @Scripts.Render("~/bundles/jqueryval")
}

<section class="content-wrapper main-content clear-fix">

    <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
        <h3 class="modal-title">@GlobalResCorp.lblDifficultyPriceAdd</h3>
    </div>
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        <div class="modal-body">
            <div class="form-horizontal">
                <div class="panel panel-primary">
                    <div class="panel-heading">@GlobalResCorp.lblDifficultyPriceInfo</div>
                    <div class="panel-body">

                        <div class="form-group">
                            <label class="control-label col-sm-3">@GlobalResCorp.lblDifficultyPriceType:</label>
                            <div class="col-sm-5">
                                @Html.DropDownListFor(model => model.fldOptConfFlag1, new SelectList(ViewBag.fldOptConfFlag1, "Value", "Text"), new { @class = "form-control" })
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="control-label col-sm-3">@GlobalResCorp.lblDifficultyPriceCode:</label>
                            <div class="col-sm-5">
                                @Html.TextBoxFor(model => model.fldOptConfValue, htmlAttributes: new { @class = "form-control col-sm-2", @readonly = "true" })
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="control-label col-sm-3">@GlobalResCorp.lblDescription:</label>
                            <div class="col-sm-8">
                                @Html.TextBoxFor(model => model.fldOptConfDesc, htmlAttributes: new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.fldOptConfDesc, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="control-label col-sm-3">@GlobalResCorp.lblDifficultyPrice:</label>
                            <div class="col-sm-4">
                                @Html.TextBoxFor(model => model.fldOptConfFlag2, new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.fldOptConfFlag2, "", new { @class = "text-danger" })
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="modal-footer">
            <input class="btn btn-success" type="submit" value=@GlobalResCorp.btnSave>
            <button class="btn btn-warning" data-dismiss="modal">@GlobalResCorp.btnBack</button>
        </div>
    }
</section>

<script>

        $("form").removeData("validator");
        $("form").removeData("unobtrusiveValidation");
        $.validator.unobtrusive.parse("form");

    $(document).ready(function () {
        $("#fldOptConfFlag1").change(function () {
            var Kod = {};
            //var disableoption = "";
            Kod.url = "@Url.Action("GenerateKodHargaKesukaran", "Maintenance")";
            Kod.type = "POST";
            Kod.data = JSON.stringify({ jnsHargaKesukaran: $("#fldOptConfFlag1").val() });
            Kod.datatype = "json";
            Kod.contentType = "application/json";
            Kod.success = function (newcode) {
                $("#fldOptConfValue").empty();
                $("#fldOptConfValue").val(newcode);
            };
            Kod.error = function () { $.simplyToast('@GlobalResCorp.msgError', 'danger'); };
            $.ajax(Kod);
        });


    });

</script>
