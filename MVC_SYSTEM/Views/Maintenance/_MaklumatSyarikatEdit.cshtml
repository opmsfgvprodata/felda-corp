@using MVC_SYSTEM.Class
@model MVC_SYSTEM.ModelsCorporate.tbl_Syarikat

@{
    @Scripts.Render("~/bundles/jqueryval")
}

<section class="content-wrapper main-content clear-fix">

    <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
        <h3 class="modal-title">@GlobalResCorp.titleRCMSMaybankSyarikatEdit</h3>
    </div>
    @using (Html.BeginForm())
    {

        @*@Html.AntiForgeryToken()*@
        <div class="modal-body">
            <div class="form-horizontal">
                <div class="panel panel-primary">
                    <div class="panel-heading">@GlobalResCorp.lblCompanyCount</div>
                    <div class="panel-body">
                        <div class="form-group">
                            <label class="control-label col-sm-3">@GlobalResCorp.lblCompanyName:</label>
                            <div class="col-sm-8">
                                @Html.TextBoxFor(model => model.fld_NamaSyarikat, htmlAttributes: new { @class = "form-control", @readonly = "readonly" })
                                @Html.ValidationMessageFor(model => model.fld_NamaSyarikat, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="control-label col-sm-3">@GlobalResCorp.lblCompanyNo:</label>
                            <div class="col-sm-8">
                                @Html.TextBoxFor(model => model.fld_NoSyarikat, htmlAttributes: new { @class = "form-control", @readonly = "readonly" })
                                @Html.ValidationMessageFor(model => model.fld_NoSyarikat, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="control-label col-sm-3">@GlobalResCorp.lblCorpID:</label>
                            <div class="col-sm-8">
                                @Html.TextBoxFor(model => model.fld_CorporateID, htmlAttributes: new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.fld_CorporateID, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="control-label col-sm-3">@GlobalResCorp.lblClientBatchID:</label>
                            <div class="col-sm-8">
                                @Html.TextBoxFor(model => model.fld_ClientBatchID, htmlAttributes: new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.fld_ClientBatchID, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="control-label col-sm-3">@GlobalResCorp.lblAccNo:</label>
                            <div class="col-sm-8">
                                @Html.TextBoxFor(model => model.fld_AccountNo, htmlAttributes: new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.fld_AccountNo, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        @Html.HiddenFor(model => model.fld_SyarikatID)
                    </div>
                </div>
            </div>
        </div>


        <div class="modal-footer">
            <input class="btn btn-success" type="submit" value=@GlobalResCorp.btnSave>
            <button class="btn btn-warning" data-dismiss="modal">@GlobalResCorp.btnBack</button>
        </div>
    }
</section>

<script>
    $("form").removeData("validator");
    $("form").removeData("unobtrusiveValidation");
    $.validator.unobtrusive.parse("form");
</script>