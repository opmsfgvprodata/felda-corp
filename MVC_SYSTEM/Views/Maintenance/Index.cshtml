
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutMain.cshtml";
}

<section class="content-wrapper main-content clear-fix">
    <div class="well">
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()
            <div class="modal-body">
                <div class="form-horizontal">
                    <div class="panel panel-primary">
                        <div class="panel-heading">@GlobalResCorp.menuMaintenance.ToUpper()</div>
                        <div class="panel-body">
                            <div class="form-group">
                                <div class="col-sm-6">
                                    <label for="ListReport">@GlobalResCorp.lblMaintenanceList</label>
                                    @Html.DropDownList("MaintenanceList", null, htmlAttributes: new { @class = "form-control" })
                                </div>
                                <div id="sublist" class="col-sm-6">
                                    <label for="ListReport">@GlobalResCorp.lblMaintenanceListSub</label>
                                    @Html.DropDownList("MaintenanceSubList", null, htmlAttributes: new { @class = "form-control" })
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="modal-footer-report">
                    <input class="btn btn-primary" type="submit" name="upload" id="upload" value=@GlobalResCorp.btnGo onclick="return DisplayProgressMessage(this);" />
                </div>
            </div>
        }
    </div>
</section>

<script>
    $(document).ready(function () {
        console.log($("#MaintenanceList").val());
        var SubList = {};
        //var disableoption = "";
        SubList.url = "@Url.Action("GetSubList", "Maintenance")";
        SubList.type = "POST";
        SubList.data = JSON.stringify({ ListID: $("#MaintenanceList").val() });
        SubList.datatype = "json";
        SubList.contentType = "application/json";
        SubList.success = function (sublist) {
            $("#MaintenanceSubList").empty();
            if (sublist.length != 0) {
                $("#sublist").removeClass("hidden");
                $.simplyToast('@GlobalResCorp.msgSubMenu', 'success');
                for (var i = 0; i < sublist.length; i++) {
                    $("#MaintenanceSubList").append("<option value=" + sublist[i].Value + ">" + sublist[i].Text + "</option>");
                }
            }
            else {
                $("#MaintenanceSubList").empty();
                $("#sublist").addClass("hidden");
            }
        };
        SubList.error = function () { $.simplyToast('@GlobalResCorp.msgError', 'error'); };
        $.ajax(SubList);

        $("#MaintenanceList").change(function () {
            var SubList = {};
            //var disableoption = "";
            SubList.url = "@Url.Action("GetSubList", "Maintenance")";
            SubList.type = "POST";
            SubList.data = JSON.stringify({ ListID: $("#MaintenanceList").val() });
            SubList.datatype = "json";
            SubList.contentType = "application/json";
            SubList.success = function (sublist) {
                $("#MaintenanceSubList").empty();
                if (sublist.length != 0) {
                    $("#sublist").removeClass("hidden");
                    $.simplyToast('@GlobalResCorp.msgSubMenu', 'success');
                    for (var i = 0; i < sublist.length; i++) {
                        $("#MaintenanceSubList").append("<option value=" + sublist[i].Value + ">" + sublist[i].Text + "</option>");
                    }
                }
                else {
                    $("#MaintenanceSubList").empty();
                    $("#sublist").addClass("hidden");
                }
            };
            SubList.error = function () { $.simplyToast('@GlobalResCorp.msgError', 'error'); };
            $.ajax(SubList);
        });
    });
</script>