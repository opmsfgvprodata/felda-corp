@using MVC_SYSTEM.Class
@model MVC_SYSTEM.ModelsCorporate.tbl_CutiUmumMasterViewModelEdit

@{
    @Scripts.Render("~/bundles/jqueryval")

    GetConfig getConfig = new GetConfig();
}

<section class="content-wrapper main-content clear-fix">

    <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
        <h3 class="modal-title">@GlobalResCorp.lblPublicHolidayEdit</h3>
    </div>
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        <div class="modal-body">
            <div class="form-horizontal">
                <div class="panel panel-primary">
                    <div class="panel-heading">@GlobalResCorp.lblPublicHolidayInfo</div>
                    <div class="panel-body">
                        <div class="form-group">
                            <label class="control-label col-sm-3">@GlobalResCorp.lblDescription:</label>
                            <div class="col-sm-8">
                                @Html.TextBoxFor(model => model.fld_KeteranganCuti, htmlAttributes: new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.fld_KeteranganCuti, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="control-label col-sm-3">@GlobalResCorp.hdrLeaveDate:</label>
                            <div class="col-sm-3">
                                <div class='input-group date' id='datetimepicker1'>
                                    @Html.EditorFor(model => model.fld_TarikhCuti, new { htmlAttributes = new { @class = "form-control", @type = "text", autocomplete = "off", @Value = String.Format("{0:dd/MM/yyyy}", Model.fld_TarikhCuti), data_val_date = @GlobalResCorp.msgModelDateValidation } })
                                    <span class="input-group-addon">
                                        <span class="glyphicon glyphicon-calendar"></span>
                                    </span>
                                </div>
                            </div>
                            <div class="col-sm-offset-3 col-sm-8">
                                @Html.ValidationMessageFor(model => model.fld_TarikhCuti, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        @Html.HiddenFor(model => model.fld_CutiUmumMasterID)
                    </div>
                </div>
            </div>
        </div>
        <div class="modal-footer">
            <input class="btn btn-success" type="submit" value=@GlobalResCorp.btnSave>
            <button class="btn btn-warning" data-dismiss="modal">@GlobalResCorp.btnBack</button>
        </div>
    }
</section>

<script>
    $(document).ready(function () {
        $("form").removeData("validator");
        $("form").removeData("unobtrusiveValidation");
        $.validator.unobtrusive.parse("form");

        //$('#fld_TarikhCuti').blur(function() {
        //    $('#fld_TarikhCuti').val("");
        //});

        $(function () {
            $('#fld_TarikhCuti').datetimepicker({
                timepicker: false,
                format: 'd/m/Y'
            });
        });
    });
</script>