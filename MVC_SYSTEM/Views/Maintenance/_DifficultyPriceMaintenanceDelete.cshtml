@using MVC_SYSTEM.Class
@*Modified by Shazana 18/7/2023*@
@model MVC_SYSTEM.ModelsCorporate.tbl_HargaKesukaran

@{
    @Scripts.Render("~/bundles/jqueryval")
    GetConfig config = new GetConfig();
}

<section class="content-wrapper main-content clear-fix">

    <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
        @*Modified by Shazana 18/7/2023*@
        @if (Model.fld_Deleted == false)
        {

            <h3 class="modal-title">Hapus Harga Kesukaran</h3>
        }
        else
        {

            <h3 class="modal-title">Guna Semula Harga @ViewBag.DifficultyName</h3>
        }
    </div>
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        <div class="modal-body">
            <div class="form-horizontal">
                <div class="panel panel-primary">
                    @*Modify by Shazana 18/6/2023*@
                    @if (Model.fld_Deleted == false)
                    {
                        <div class="panel-heading">Hapus Harga Kesukaran</div>
                    }
                    else
                    {
                        <div class="panel-heading">Guna Semula Harga @ViewBag.DifficultyName</div>
                    }



                    <div class="panel-body">
                        <div class="form-group">
                            <label class="control-label col-sm-3">@GlobalResCorp.lblDifficultyPriceCode:</label>
                            <div class="col-sm-8">
                                @*Modified by Shazana 18/7/2023*@
                                @Html.TextBoxFor(model => model.fld_KodHargaKesukaran, htmlAttributes: new { @class = "form-control", @disabled = "true" })
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="control-label col-sm-3">@GlobalResCorp.lblDescription:</label>
                            <div class="col-sm-8">
                                @*Modified by Shazana 18/7/2023*@
                                @Html.TextBoxFor(model => model.fld_Keterangan, htmlAttributes: new { @class = "form-control", @disabled = "true" })
                            </div>
                        </div>
                        <div class="form-group">
                            @*Modify by Shazana 18/6/2023*@
                            <label class="control-label col-sm-3">Harga Kesukaran(RM):</label>
                            <div class="col-sm-4">
                                @*Modified by Shazana 18/7/2023*@
                                @Html.TextBoxFor(model => model.fld_HargaKesukaran, htmlAttributes: new { @class = "form-control", @disabled = "true" })

                            </div>
                        </div>
                        @Html.HiddenFor(model => model.fld_Id)
                    </div>
                </div>
            </div>
            <div class="form-group">
                <div class="col-sm-12 text-center">
                    <h3>
                        <span class="label label-danger">
                            @GlobalResCorp.msgDelete
                        </span>
                    </h3>
                </div>
            </div>
        </div>
        <div class="modal-footer">
            <input class="btn btn-success" type="submit" value=@GlobalResCorp.btnYes>
            <button class="btn btn-danger" data-dismiss="modal">@GlobalResCorp.btnNo</button>
        </div>
    }
</section>

<script>
    $("form").removeData("validator");
    $("form").removeData("unobtrusiveValidation");
    $.validator.unobtrusive.parse("form");
</script>

