@model IEnumerable<MVC_SYSTEM.ModelsCorporate.tblTaskRemainder>
@using MVC_SYSTEM.Class;
@{
    GetConfig GetConfig = new GetConfig();
    int bil = 1;
}
@if (ViewBag.TotalCount > 0)

{
    <div id="test4" class="modal-body">
        <p>@GlobalResPermitPassportPopup.lblWilayahName : @ViewBag.WilayahName</p>
        <p>@GlobalResPermitPassportPopup.lblLadangName : @ViewBag.LadangName</p>
        <p>JUMLAH FAIL : @ViewBag.TotalCount</p>
        <table class="table table-bordered table-hover">
            <thead>
                <tr>
                    <th class="text-center-0" width="5%">
                        <b>@GlobalResPermitPassportPopup.No</b>
                    </th>
                    <th class="text-center" width="40%">
                        <b>@GlobalResPermitPassportPopup.hdrTrkhMohon</b>
                    </th>
                    <th class="text-center" width="40%">
                        <b>@GlobalResPermitPassportPopup.hdrNamaFile</b>
                    </th>
                    <th class="text-center" width="15%">
                        <b>@GlobalResPermitPassportPopup.hdrStatus</b>
                    </th>
                </tr>
            </thead>

            @foreach (var item in Model)
            {
                <tr>
                    <td align="center" width="5%">
                        @bil
                    </td>
                    <td align="center" width="40%">
                        @Html.DisplayFor(modelItem => item.fldDateTimeStamp)
                    </td>
                    <td align="center" width="40%">
                        @Html.DisplayFor(modelItem => item.fldFileName)
                    </td>
                    <td align="center" width="15%">
                        @GetConfig.GetDescData(item.fldStatus.ToString(), "permohanankelulusan", item.fldNegaraID, item.fldSyarikatID)
                    </td>
                </tr>
                bil++;
            }
        </table>
        <hr class="style6">
    </div>
}

<script>
    $(document).ready(function () {
        $("#printpage3").click(function () {
            var DivElement = document.getElementById("test4").innerHTML;
            var oldPage = document.body.innerHTML;
            document.body.innerHTML = DivElement;
            window.print();
            document.body.innerHTML = oldPage;
        })

    });
</script>
