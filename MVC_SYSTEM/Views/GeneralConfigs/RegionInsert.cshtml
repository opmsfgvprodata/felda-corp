@model MVC_SYSTEM.ModelsCorporate.tbl_Wilayah

@{
    Layout = null;
}

<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
    <h3 class="modal-title">@GlobalResRegion.lblTitleCreate</h3>
</div>
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="modal-body">
        <div class="form-horizontal">
            <span id="progress" class="text-center" style="display: none;">
                <img src="~/Asset/Images/wait.gif" alt="wait" />
            </span>
            <div class="form-group">
                <label class="control-label col-md-2">@GlobalResRegion.lblCompany</label>
                <div class="col-md-9">
                    @Html.DropDownList("fld_SyarikatID", null, htmlAttributes: new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.fld_SyarikatID, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-md-2">@GlobalResRegion.hdrRegion</label>
                <div class="col-md-9">
                    @Html.EditorFor(model => model.fld_WlyhName, new { htmlAttributes = new { @class = "form-control required" } })
                    @Html.ValidationMessageFor(model => model.fld_WlyhName, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-md-2">@GlobalResRegion.hdrEmel</label>
                <div class="col-md-9">
                    @Html.EditorFor(model => model.fld_WlyhEmail, new { htmlAttributes = new { @class = "form-control required" } })
                    @Html.ValidationMessageFor(model => model.fld_WlyhEmail, "", new { @class = "text-danger" })
                </div>
            </div>
            @*@Html.Hidden("Test", ViewData["Flag1"])*@
        </div>
    </div>
    <div class="modal-footer">
        <input class="btn btn-primary" type="submit" value=@GlobalResRegion.btnSave />
        <button class="btn btn-warning" data-dismiss="modal">@GlobalResRegion.btnBack</button>
    </div>
}
<script>
    $("form").removeData("validator");
    $("form").removeData("unobtrusiveValidation");
    $.validator.unobtrusive.parse("form");
</script>
