@model MVC_SYSTEM.ModelsCorporate.tblOptionConfigsWeb

@{
    Layout = null;
}

<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
    <h3 class="modal-title">@GlobalResConfig.lblTitleUpdate</h3>
</div>
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="modal-body">
        <div class="form-horizontal">
            <span id="progress" class="text-center" style="display: none;">
                <img src="~/Asset/Images/wait.gif" alt="wait" />
            </span>

            <div class="form-group">
                <label class="control-label col-md-2">@GlobalResConfig.lblKod</label>
                <div class="col-md-9">
                    @Html.EditorFor(model => model.fldOptConfValue, new { htmlAttributes = new { @class = "form-control", disabled = "disabled" } })
                    @Html.ValidationMessageFor(model => model.fldOptConfValue, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-md-2">@GlobalResConfig.lblKeterangan</label>
                <div class="col-md-9">
                    @Html.EditorFor(model => model.fldOptConfDesc, new { htmlAttributes = new { @class = "form-control required", required = "required" } })
                    @Html.ValidationMessageFor(model => model.fldOptConfDesc, "", new { @class = "text-danger" })
                </div>
            </div>
            @*sepul tambah 19/02/2021*@
            @if (ViewBag.Flag1 == "monthlist")
            {
                <div class="form-group">
                    <label class="control-label col-md-2">Nama Bulan</label>
                    <div class="col-md-9">
                        @Html.EditorFor(model => model.fldOptConfFlag2, new { htmlAttributes = new { @class = "form-control required", required = "required" } })
                        @Html.ValidationMessageFor(model => model.fldOptConfFlag2, "", new { @class = "text-danger" })
                    </div>
                </div>
            }
            @*sampai sini*@
        </div>
    </div>
    <div class="modal-footer">
        <input id="btnSave" class="btn btn-primary" type="submit" value=@GlobalResConfig.btnSave />
        <button class="btn btn-warning" data-dismiss="modal">@GlobalResConfig.btnBack</button>
    </div>
}

