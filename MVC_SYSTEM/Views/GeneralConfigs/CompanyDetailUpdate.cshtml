@model MVC_SYSTEM.ModelsCorporate.tbl_Syarikat

@{
    Layout = null;
}

<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
    <h3 class="modal-title">@GlobalResCompanyDetail.lblTitleUpdate</h3>
</div>
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="modal-body">
        <div class="form-horizontal">
            <span id="progress" class="text-center" style="display: none;">
                <img src="~/Asset/Images/wait.gif" alt="wait" />
            </span>

            <div class="form-group">
                <label class="control-label col-md-2">@GlobalResCompanyDetail.lblCompany</label>
                <div class="col-md-9">
                    @Html.EditorFor(model => model.fld_NamaSyarikat, new { htmlAttributes = new { @class = "form-control required" } })
                    @Html.ValidationMessageFor(model => model.fld_NamaSyarikat, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-md-2">@GlobalResCompanyDetail.lblCompanyNickname</label>
                <div class="col-md-9">
                    @Html.EditorFor(model => model.fld_NamaPndkSyarikat, new { htmlAttributes = new { @class = "form-control required" } })
                    @Html.ValidationMessageFor(model => model.fld_NamaPndkSyarikat, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-md-2">@GlobalResCompanyDetail.lblCompanyNo</label>
                <div class="col-md-9">
                    @Html.EditorFor(model => model.fld_NoSyarikat, new { htmlAttributes = new { @class = "form-control required" } })
                    @Html.ValidationMessageFor(model => model.fld_NoSyarikat, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-md-2">@GlobalResCompanyDetail.lblCompanyEmail</label>
                <div class="col-md-9">
                    @Html.EditorFor(model => model.fld_SyarikatEmail, new { htmlAttributes = new { @class = "form-control required" } })
                    @Html.ValidationMessageFor(model => model.fld_SyarikatEmail, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>
    </div>
    <div class="modal-footer">
        <input class="btn btn-primary" type="submit" value=@GlobalResCompanyDetail.btnSave />
        <button class="btn btn-warning" data-dismiss="modal">@GlobalResCompanyDetail.btnBack</button>
    </div>
}
<script>
    $("form").removeData("validator");
    $("form").removeData("unobtrusiveValidation");
    $.validator.unobtrusive.parse("form");
</script>



