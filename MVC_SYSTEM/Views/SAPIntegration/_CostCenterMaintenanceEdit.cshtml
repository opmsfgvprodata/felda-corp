@using MVC_SYSTEM.Class
@model MVC_SYSTEM.ModelsCorporate.tbl_CostCentre

@{
    @Scripts.Render("~/bundles/jqueryval")
}


<section class="content-wrapper main-content clear-fix">

    <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
        <h3 class="modal-title">@GlobalResCorp.lblccUpdate</h3>
    </div>
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        <div class="modal-body">
            <div class="form-horizontal">
                <div class="panel panel-primary">
                    <div class="panel-heading">@GlobalResCorp.lblccInfo</div>
                    <div class="panel-body">
                        <div class="form-group">
                            <label for="ListReport" class="control-label col-sm-2">@GlobalResCorp.lblCostCenter:</label>
                            <div class="col-sm-8">
                                @*@Html.DropDownList("fld_CostCentre", null, htmlAttributes: new { @class = "form-control", @readonly = "true" })
                                @Html.ValidationMessageFor(model => model.fld_CostCentre, "", new { @class = "text-danger" })*@
                                @Html.EditorFor(model => model.fld_CostCentre, new { htmlAttributes = new { @class = "form-control", @readonly = "true" } })
                                @Html.ValidationMessageFor(model => model.fld_CostCentre, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div id="sublist" class="form-group">
                            <label for="ListReport" class="control-label col-sm-2">Wilayah:</label>
                            <div class="col-sm-3">
                                @Html.DropDownList("fld_WilayahID", null, htmlAttributes: new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.fld_WilayahID, "", new { @class = "text-danger" })
                            </div>

                            <label for="ListReport" class="control-label col-sm-1">@GlobalResCorp.lblLadangDesc:</label>
                            <div class="col-sm-4">
                                @Html.DropDownList("fld_LadangID", null, htmlAttributes: new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.fld_LadangID, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        @Html.HiddenFor(model => model.fld_ID)
                        @Html.HiddenFor(model => model.fld_Deleted)

                        @Html.HiddenFor(model => model.fld_NegaraID)
                        @Html.HiddenFor(model => model.fld_SyarikatID)
                    </div>
                </div>
            </div>
        </div>

        <div class="modal-footer">
            <input class="btn btn-success" type="submit" value=@GlobalResCorp.btnSave>
            <button class="btn btn-warning" data-dismiss="modal">@GlobalResCorp.btnBack</button>
        </div>
    }
</section>

<script>
    $("form").removeData("validator");
    $("form").removeData("unobtrusiveValidation");
    $.validator.unobtrusive.parse("form");
</script>

<script>
    $(document).ready(function () {
        $("#Wilayah").change(function () {
            var WilayahIDList = {};
            var disableoption = "";
            WilayahIDList.url = "@Url.Action("GetLadang", "SAPIntegration")";
            WilayahIDList.type = "POST";
            WilayahIDList.data = JSON.stringify({ WilayahID: $("#Wilayah").val() });
            WilayahIDList.datatype = "json";
            WilayahIDList.contentType = "application/json";
            WilayahIDList.success = function (ladanglist) {
                $("#Ladang").empty();
                for (var i = 0; i < ladanglist.length; i++) {
                    if ($("#Wilayah").val() == 0) {
                        disableoption = "disabled";
                    }
                    $("#Ladang").append("<option value=" + ladanglist[i].Value + " " + disableoption + ">" + ladanglist[i].Text + "</option>");
                }
            };
            WilayahIDList.error = function () { $.simplyToast('Sistem masalah', 'error'); };
            $.ajax(WilayahIDList);
        });
    });
</script>
