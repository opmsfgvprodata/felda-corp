@model MVC_SYSTEM.Models.tblTKADetail

@{ 
    string PDE = Convert.ToString(string.Format("{0:dd/MM/yyyy}", Model.fldPassExpDT.Value));
    string BOD = Convert.ToString(string.Format("{0:dd/MM/yyyy}", Model.fldBOD.Value));
    string add = Model.fldDpdntAdd;
}

<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
    <h3 class="modal-title">Passport No : @Model.fldPassNo</h3>
</div>
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="modal-body">
        <div class="form-horizontal">
            <div class="panel panel-primary">
                <div class="panel-heading">Edit New Worker Data</div>
                <div class="panel-body">
                    <div class="form-group">
                    </div>
                    <div class="form-group">
                        <div class="col-sm-4">
                            <label>Worker Name</label>
                            @Html.EditorFor(model => model.fldWorkerName, new { htmlAttributes = new { @class = "form-control" } })
                        </div>
                        <div class="col-sm-3">
                            <label for="startdate">Passport Expiry Date</label>
                            <div class='input-group date' id='datetimepicker3'>
                                <input type="datetime" class="form-control" name="fldPassExpDT" id="fldPassExpDT" value="@PDE" />
                                <span class="input-group-addon">
                                    <span class="glyphicon glyphicon-calendar"></span>
                                </span>
                            </div>
                        </div>
                        <div class="col-sm-2">
                            <label>Gender</label>
                            @Html.DropDownList("GenderList", null, htmlAttributes: new { @class = "form-control" })
                        </div>
                        <div class="col-sm-3">
                            <label for="enddate">Date Of Birth</label>
                            <div class='input-group date' id='datetimepicker4'>
                                <input type="datetime" class="form-control" name="fldBOD" id="fldBOD" value="@BOD" />
                                <span class="input-group-addon">
                                    <span class="glyphicon glyphicon-calendar"></span>
                                </span>
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-sm-3">
                            <label for="enddate">Nationality</label>
                            @Html.DropDownList("KerakyatanList", null, htmlAttributes: new { @class = "form-control" })
                        </div>
                        <div class="col-sm-3">
                            <label for="enddate">Worker Nature Of Work</label>
                            @Html.DropDownList("BusinesList", null, htmlAttributes: new { @class = "form-control" })
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-sm-4">
                            <label>Dependant Name</label>
                            @Html.EditorFor(model => model.fldDpdntName, new { htmlAttributes = new { @class = "form-control" } })
                        </div>
                        <div class="col-sm-3">
                            <label>Dependant Relationship</label>
                            @Html.DropDownList("RelationshipList", null, htmlAttributes: new { @class = "form-control" })
                        </div>
                        <div class="col-sm-3">
                            <label>Dependant Telephone No.</label>
                            @Html.EditorFor(model => model.fldDpdntTelNo, new { htmlAttributes = new { @class = "form-control" } })
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-sm-4">
                            <label>Dependant Full Address</label>
                            <textarea rows="4" cols="50" class="form-control" id="DependantAdd" name="DependantAdd">@add</textarea>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="modal-footer">
        @Html.Hidden("fldID", Model.fldID)
        @Html.Hidden("fldTKABatchID", Model.fldTKABatchID)
        <input class="btn btn-primary" type="submit" value="Save" />
        <button class="btn btn-warning" data-dismiss="modal">Close</button>
    </div>
}