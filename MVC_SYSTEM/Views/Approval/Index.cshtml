
@{
    ViewBag.Title = "Approval";
    Layout = "~/Views/Shared/_LayoutMain.cshtml";
}

<!-- Styles for Wait Messages -->
@*<link href="~/Asset/Content/font-awesome.min.css" rel="stylesheet" />*@

<div id="UpdateProgress1" style="display:none;">
    <div class="progressTest">
        <label>
            @GlobalResApproval.msgWait
        </label>
    </div>
</div>

<section class="content-wrapper main-content clear-fix">
    <div class="well">
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()
            <!-- ** BEGIN POP-UP MESSAGE AREA ** -->
            @*<div class="submit-progress hidden">
                <i class="fa fa-2x fa-spinner fa-spin"></i>
                <label>@GlobalResApproval.msgWait</label>
            </div>*@
            <!-- ** END POP-UP MESSAGE AREA ** -->
            <div class="modal-body">
                <div class="form-horizontal">
                    <div class="panel panel-primary">
                        <div class="panel-heading">@GlobalResApproval.lblTitle</div>
                        <div class="panel-body">
                            <div class="form-group">
                                <div class="col-sm-4">
                                    <label for="JenisKelulusan">@GlobalResApproval.lblJenisKelulusan</label>
                                    @Html.DropDownList("ApprovalList", null, htmlAttributes: new { @class = "form-control" })
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="modal-footer-report">
                    <input class="btn btn-primary" type="submit" name="Teruskan" id="Teruskan" value="Teruskan" onclick="return DisplayProgressMessage(this);" />
                </div>
            </div>
        }
    </div>
</section>
<script>
    function DisplayProgressMessage(ctl) {
        //$("body").addClass("submit-progress-bg");
        //$(".submit-progress").removeClass("hidden");
        $("#UpdateProgress1").css("display", "");
        return true;
    }
</script>

